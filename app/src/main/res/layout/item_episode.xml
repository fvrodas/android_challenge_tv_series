<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:minHeight="?attr/listPreferredItemHeightSmall">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/season_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/lighter_teal"
        android:padding="4dp"
        tools:text = "Season 1"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/episode_number_textview"
        android:layout_width="wrap_content"
        android:layout_height="?attr/listPreferredItemHeightSmall"
        android:padding="4dp"
        tools:text = "Episode 1"
        android:visibility="visible"
        android:textColor="@color/darker_teal"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:textAlignment="gravity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/season_textview"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/episode_name_textview"
        android:layout_width="0dp"
        android:layout_height="?attr/listPreferredItemHeightSmall"
        android:padding="4dp"
        tools:text = "The fall of the test episode name"
        android:visibility="visible"
        android:gravity="center_vertical"
        android:textAlignment="gravity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/episode_number_textview"
        app:layout_constraintTop_toBottomOf="@id/season_textview"/>
</androidx.constraintlayout.widget.ConstraintLayout>