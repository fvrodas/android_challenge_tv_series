<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/season_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/Theme.TVSeriesChallenge.SeasonTitle"
        android:padding="@dimen/quarter_margin"
        tools:text = "Season 1"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/episode_poster_imageview"
        android:layout_marginTop="@dimen/quarter_margin"
        android:layout_width="@dimen/episode_small_imageview_width"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:layout_marginStart="@dimen/normal_margin"
        app:layout_constraintBottom_toTopOf="@id/episode_summary_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/season_textview" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/episode_number_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/quarter_margin"
        tools:text = "Episode 1"
        android:visibility="visible"
        style="@style/Theme.TVSeriesChallenge.EpisodeTitle"
        android:gravity="center_vertical"
        android:textAlignment="gravity"
        app:layout_constraintStart_toEndOf="@id/episode_poster_imageview"
        app:layout_constraintTop_toBottomOf="@id/season_textview"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/episode_name_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/quarter_margin"
        tools:text = "The fall of the test episode name"
        android:visibility="visible"
        android:gravity="center_vertical"
        android:textAlignment="gravity"
        android:layout_marginEnd="@dimen/normal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/episode_number_textview"
        app:layout_constraintTop_toBottomOf="@id/episode_number_textview"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/episode_summary_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/normal_margin"
        tools:text = "The fall of the test episode name"
        android:visibility="visible"
        android:gravity="center_vertical"
        android:textAlignment="gravity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/episode_name_textview"/>
</androidx.constraintlayout.widget.ConstraintLayout>