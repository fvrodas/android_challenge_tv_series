<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.fvrodas.tvserieschallenge">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".TvSeriesChallengeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TVSeriesChallenge.Starting">
        <activity
            android:name=".features.common.activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".features.shows.activities.ShowDetailsActivity"
            android:exported="false"
            android:theme="@style/Theme.TVSeriesChallenge" />
        <activity
            android:name=".features.people.activities.PersonDetailsActivity"
            android:exported="false"
            android:theme="@style/Theme.TVSeriesChallenge" />
        <activity
            android:theme="@style/Theme.TVSeriesChallenge.AppCompat"
            android:windowSoftInputMode="stateVisible"
            android:name=".features.security.activities.PasswordActivity"
            android:exported="false" />
    </application>

</manifest>